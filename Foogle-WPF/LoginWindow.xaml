<Window x:Class="Foogle_WPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="Email" HorizontalAlignment="Left" Height="23" Margin="138,110,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Password" HorizontalAlignment="Left" Height="23" Margin="138,159,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="UserNameLabel" Content="Email:" HorizontalAlignment="Left" Margin="27,110,0,0" VerticalAlignment="Top"/>
        <Label x:Name="PasswordLabel" Content="Lozinka:" HorizontalAlignment="Left" Margin="27,156,0,0" VerticalAlignment="Top"/>
        <Button x:Name="LoginButton" Content="Prijava" HorizontalAlignment="Left" Margin="27,197,0,0" VerticalAlignment="Top" Width="90" Click="LoginButton_Click" RenderTransformOrigin="0.476,0.716"/>
        <CheckBox x:Name="RememberMeCheckBox" Content="Zapamti prijavu" HorizontalAlignment="Left" Margin="138,197,0,0" VerticalAlignment="Top" Width="120" Checked="RememberMeCheckBox_Checked"/>
        <Label x:Name="NameFoogleLabel" Content="Foogle" HorizontalAlignment="Left" Margin="27,37,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="Rockwell" RenderTransformOrigin="0.986,0.333" Width="90"/>
        <Label Name="LoginError" Visibility="Hidden" Foreground="Red" Content="Neuspjesna prijava: pogresan user / lozinka." HorizontalAlignment="Center" Margin="27,187,17.6,0" VerticalAlignment="Top" Width="249"/>
    </Grid>
</Window>
