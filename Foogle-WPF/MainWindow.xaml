        <Button Content="Traži (kategorijski)" HorizontalAlignment="Left" Margin="445,146,0,0" VerticalAlignment="Top" Width="111" Height="25"/>
        <Button Click="TestDataButton" Content="Testni podaci (pretr.)" HorizontalAlignment="Left" Margin="445,119,0,0" VerticalAlignment="Top" Width="111"/>
