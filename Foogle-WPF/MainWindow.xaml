        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="SearchButton" Content="Traži" HorizontalAlignment="Right" Margin="0,146,169,0" VerticalAlignment="Top" Width="80" TabIndex="3" BorderThickness="3" Height="25" Uid="SerchButton" Click="SearchButton_Click"/>
        <!-- Image x:Name="LogoImage" Margin="15,40,10,0" Tag="Logo" IsHitTestVisible="False" Uid="LogoImage" Height="99" VerticalAlignment="Top" ToolTip="TODO: Logo goes here :)"/> -->
