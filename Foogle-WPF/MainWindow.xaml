        <WebBrowser Source="http://www.google.com" LoadCompleted="wbCompleted" Name="webBrowser1" HorizontalAlignment="Left" Height="401" Margin="10,189,0,0" VerticalAlignment="Top" Width="570"/>
        <Label  x:Name="LoggedInLabel" HorizontalAlignment="Left" Margin="500,37,0,0" VerticalAlignment="Top" Width="80"/>
