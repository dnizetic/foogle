<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input.Toolkit" x:Class="Foogle_WPF.MainWindow"
        Title="Foogle" Height="377" Width="600" SizeToContent="WidthAndHeight" ResizeMode="CanMinimize" WindowStartupLocation="CenterOwner" Foreground="Black">
    <Grid HorizontalAlignment="Left" Width="590" Height="350" Margin="0,0,0,-1.2">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="White" Offset="0.443"/>
                <GradientStop Color="White" Offset="0.322"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="SearchButton" Content="Traži" HorizontalAlignment="Right" Margin="0,145,135.4,0" VerticalAlignment="Top" Width="69" TabIndex="3" BorderThickness="3" Height="25" Uid="SerchButton" Click="SearchButton_Click"/>
        <GridSplitter HorizontalAlignment="Left" Height="100" Margin="491,155,-54,0" VerticalAlignment="Top" Width="5"/>
        <ListView x:Name="ResultList" Height="165" Margin="10,0,10,10" VerticalAlignment="Bottom" SelectionMode="Multiple" Uid="ResultList" IsHitTestVisible="True" TabIndex="4">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <!-- Image x:Name="LogoImage" Margin="15,40,10,0" Tag="Logo" IsHitTestVisible="False" Uid="LogoImage" Height="99" VerticalAlignment="Top" ToolTip="TODO: Logo goes here :)"/> -->
        <Button x:Name="LoginButton" Content="Prijava" HorizontalAlignment="Right" Margin="0,10,135.4,0" VerticalAlignment="Top" Width="84" TabIndex="1" BorderThickness="3" Height="22" Uid="LoginButton" Click="LoginButton_Click" RenderTransformOrigin="1.093,0.555"/>
        <Controls:AutoCompleteBox FilterMode="None" Populating="searchBoxPopulating"  x:Name="searchBox"  HorizontalAlignment="Left" Margin="158,146,0,0" VerticalAlignment="Top" Width="208"/>
        <Image Margin="128,51,201.4,208" Source="foogle.png" Stretch="Fill"/>
        <Button Content="Registracija (korisnik)" HorizontalAlignment="Left" Margin="20,10,0,0" VerticalAlignment="Top" Width="118" Click="UserRegisterButton"/>
        <Button Content="Registracija (prof.)" HorizontalAlignment="Left" Margin="143,10,0,0" VerticalAlignment="Top" Width="119" Click="RegistracijaProfesor"/>
        <Button Name="PrijavaAdminButton" Content="Prijava (admin)" HorizontalAlignment="Left" Margin="460,10,0,0" VerticalAlignment="Top" Width="105" Click="PrijavaAdminButton_Click" />
        <!-- <TextBox Name="SearchBox" HorizontalAlignment="Left" Height="23" Margin="80,144,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="192" TextChanged="OnSearchBoxTextChanged"/>-->
        <!-- <TextBox HorizontalAlignment="Left" Height="23" Margin="80,144,0,0" TextWrapping="Wrap" Text="[php, mysql...]" VerticalAlignment="Top" Width="196"/> -->

    </Grid>
</Window>
