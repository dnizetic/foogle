<Window x:Class="Foogle_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Foogle" Height="377" Width="450" SizeToContent="WidthAndHeight" ResizeMode="CanMinimize" WindowStartupLocation="CenterOwner" Foreground="Black">
    <Grid HorizontalAlignment="Left" Width="442" Height="350">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="White" Offset="0.443"/>
                <GradientStop Color="White" Offset="0.322"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="SearchButton" Content="Traži" HorizontalAlignment="Right" Margin="0,144,80,0" VerticalAlignment="Top" Width="69" TabIndex="3" BorderThickness="3" Height="25" Uid="SerchButton" Click="SearchButton_Click"/>
        <GridSplitter HorizontalAlignment="Left" Height="100" Margin="491,155,-54,0" VerticalAlignment="Top" Width="5"/>
        <Grid HorizontalAlignment="Left" Height="100" Margin="342,-21,0,0" VerticalAlignment="Top" Width="100"/>
        <ListView x:Name="ResultList" Height="165" Margin="10,0,10,10" VerticalAlignment="Bottom" SelectionMode="Multiple" Uid="ResultList" IsHitTestVisible="True" TabIndex="4">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <ComboBox x:Name="SearchCombo" HorizontalAlignment="Left" Margin="80,144,0,0" VerticalAlignment="Top" Width="208" Height="25" TabIndex="2" IsEditable="True" Uid="SearchCombo" SelectionChanged="SearchCombo_SelectionChanged"/>
        <Image x:Name="LogoImage" Margin="15,40,10,0" Tag="Logo" IsHitTestVisible="False" Uid="LogoImage" Height="99" VerticalAlignment="Top"/>
        <Button x:Name="LoginButton" Content="Prijava" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="69" TabIndex="1" BorderThickness="3" Height="25" Uid="LoginButton" Click="LoginButton_Click"/>
        <Label x:Name="UserLabel" Content="Prijavite se -&gt;" HorizontalAlignment="Left" Margin="220,9,0,0" VerticalAlignment="Top" Width="138" IsHitTestVisible="False" FontWeight="Bold" TextOptions.TextHintingMode="Animated" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1" ScaleX="1"/>
                    <SkewTransform AngleY="0" AngleX="0"/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>

    </Grid>
</Window>
