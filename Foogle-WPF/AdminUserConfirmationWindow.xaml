<Window x:Class="Foogle_WPF.AdminUserConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AdminUserConfirmationWindow" Height="300" Width="500"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid Margin="0,0,-0.4,0">
        <ListView ItemsSource="{Binding KorisnikCollection}" HorizontalAlignment="Left" Height="100" Margin="0,94,0,0" VerticalAlignment="Top" Width="484">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding id}" />
                    <GridViewColumn Header="Email" DisplayMemberBinding="{Binding email}" />
                    <GridViewColumn Header="Ime" DisplayMemberBinding="{Binding ime}"/>
                    <GridViewColumn Header="Prezime" DisplayMemberBinding="{Binding prezime}"/>
                    <GridViewColumn Header="Tip korisnika" DisplayMemberBinding="{Binding tip_korisnika}"/>
                    <GridViewColumn Header="Aktiviran" DisplayMemberBinding="{Binding aktiviran}"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
